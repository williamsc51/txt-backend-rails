<% if !flash[:notice].blank? %>
<div class="alert alert-success">
    <%= flash[:notice] %>
</div>
<% end %>

    <p> <%= link_to "Add new User", new_user_path %> </p>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lasname</th>
            <th>Email</th>
            <th>Created</th>
            <th># Books Owned</th>
            <th>Action</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.fname %></td>
            <td><%= user.lname %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.strftime("%F") %></td>
            <td><%= user.books.count %></td>
            <td>
                <%= link_to "Show", user_path(user) %>
                |
                <%= link_to "Edit", edit_user_path(user) %>
            </td>
        </tr>
        <% end %>
    </table>


    
    

