<% if @book.errors.any? %>
<ul>
  <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for(@book) do |f| %>
    <div class="row"> 
        <div class="col-md-12">
            <div class="form-group form-group-sm">
            <label class="control-label">Title</label>
                <%= f.text_field :title, class: "form-control"%>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">Author</label>
                <%= f.text_field :author, class: "form-control"%>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">ISBN</label>
                <%= f.text_field :isbn, class: "form-control"%>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">Price</label>
                <%= f.text_field :price, class: "form-control"%>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">Description</label>
                <%= f.text_area :description, cols: 20, rows: 5, class: "form-control" %>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">Condition</label>
                <%= select_tag(:condition, options_for_select([ "Excellent", "Good", "Average", "Poor"])) %>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">Cover</label>
                <%= f.file_field :thumbnail, class: "form-control" %>
            </div>
        </div>
                                
        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label">Category</label>
                <%= select_tag(:category, options_for_select([ "Novel", "College", "High School", "Kids"])) %>
            </div>
        </div>

    </div>

    <div class="col-xs-12">
        <%= f.submit "Create Book", class:"btn btn-primary" %>
    </div>
<% end %>