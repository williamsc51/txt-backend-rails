
<%= link_to "Add New Book", new_book_path %>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Price</th>
        <th>Category</th>
        <th>Created Date</th>
        <th>Action</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td><%= book.price %></td>
        <td><%= book.category %></td>
        <td><%= book.created_at.strftime("%m/%d/%y") %></td>
        <td>
            <%= link_to "Show", book_path(book) %>
            |
            <%= link_to "Edit", edit_book_path(book) %>
        </td>
    </tr>
    <% end %>
</table>

